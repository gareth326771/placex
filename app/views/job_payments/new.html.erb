  <div class="section hero wf-section">
    <h1 class="heading">Start a job payment<span class="blue-stop">.</span></h1>
    <p class="paragraph-3">Fill the below details to use our secure online deposit platform<span class="blue-stop">.</span></p>
    <div class="new-jp-form w-container-form padding-10">
      <div class="w-form g-3 form-group">
        <%= form_for JobPayment.new, html: {"name" => "email-form", 'data-name' => "Email Form"}, "class" => "form",  "id" => "email-form" do |f| %>
          <%= f.select :initiating_party, ["Tradesman", "Customer"], { :include_blank => 'I am a ...'}, class: "select-field w-select", id: "Select-Party", required: true %>
          <label for="name" class="form-label">Tradesman email<span class="blue-stop">.</span></label>
          <%= f.email_field :tradesman_email, class: "text-field w-input", id: "name", html: {"maxlength" => "256", "name" => "name", "data-name" => "Name"}, placeholder: "Enter Tradesman email ...", required: true %>
          <label for="email" class="form-label">Customer email<span class="blue-stop">.</span></label>
          <%= f.email_field :customer_email, class: "text-field w-input", id: "email", html: {"maxlength" => "256", "name" => "name", "data-name" => "Name"}, placeholder: "Enter Customer email ...", required: true %>
          <label for="job-cost" class="form-label">Total job cost in £<span class="blue-stop">.</span></label>
          <%= f.number_field :amount, value: number_to_currency(f.object.amount.to_f, delimiter: '', unit: '£', format: ), step: 0.5, class: "text-field w-input", id: "job-cost", html: {"type" => "number", "name" => "job-cost", "data-name" => "job cost"}, placeholder: 'E.g. "1000.00" ...', required: true %>
          <label for="short-description" class="form-label blue-stop">Short description<span class="blue-stop">.</span></label>
          <%= f.text_field :short_description, class: "text-field w-input", id: "short-description", html: {"type" => "text", "name" => "short-description", "data-name" => "short description"}, placeholder: 'E.g. "Decking job" ...', required: true %>
          <%= f.submit "Start Payment", class: "button w-button" %>
        <% end %>
      </div>
    </div>
    <div class="container-4 w-container"></div>
  </div>
  <div data-anchor="slide1" class="section">
    <div class="w-container">
      <h2 class="grey-heading">FAQ<span class="blue-stop">.</span></h2>
    </div>
    <div class="container-3 w-container">
      <p class="paragraph-2">Customers pay into our <strong>secure online deposit box</strong> at the start of a job, money is released when agreed milestones are hit<span class="blue-stop">.</span></p>
    </div>
  </div>



